{
  "name": "better-route/better-route",
  "description": "Thin PHP 8.1+ REST routing and resource library for WordPress.",
  "type": "library",
  "license": "proprietary",
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "BetterRoute\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BetterRoute\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist",
    "analyse": "phpstan analyse",
    "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
    "cs-check": "php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.php"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
